{
  "name": "prompt-note-tool",
  "version": "1.0.0",
  "description": "A Mac-style AI prompt manager with usage analytics, dark mode, and local storage persistence.",
  "author": "Your Name",
  "private": true,
  "homepage": "./",
  "main": "electron/main.js",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.3",
    "lucide-react": "^0.300.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "tailwindcss": "^3.4.0"
  },
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "electron:start": "npm run compile:electron && electron .",
    "compile:electron": "tsc -p tsconfig.electron.json",
    "pack": "npm run build && npm run compile:electron && electron-builder --dir",
    "dist": "npm run build && npm run compile:electron && electron-builder"
  },
  "build": {
    "appId": "com.promptnotetool.app",
    "productName": "PromptNote Tool",
    "files": [
      "build/**/*",
      "electron/main.js",
      "electron/preload.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}